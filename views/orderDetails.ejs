<!DOCTYPE html>
<html lang="th">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, user-scalable=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link rel="icon" type="image/png" href="/img/icon.png">
    <title>Home</title>
    <link href="/css/style.css" rel="stylesheet">
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <!-- ฟอนต์ Prompt -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@300;400;500;600&display=swap" rel="stylesheet">
</head>

<body class="prompt-regular">

    <!-- Navbar TOP -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-blue">
        <a class="navbar-brand ps-3" href="javascript:history.back()">ระบบเบิกอุปกรณ์ไอที</a>

        <!-- Navbar-->
        <div class="ms-auto">
            <ul class="navbar-nav me-3 me-lg-4">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        <%= user.f_name %>
                            <%= user.l_name %> - แผนก <%= sectionName %>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt fa-fw"></i>
                                ออกจากระบบ</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <div id="layoutSidenav_content">
        <!-- MAIN CONTENT -->
        <main>
            <div class="container-fluid px-4">
                <!-- รายละเอียดคำขอเบิก -->
                <div class="container mt-4">
                    <div class="card shadow">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h4 class="mb-0">รายละเอียดคำขอเบิก</h4>
                            <a href="javascript:history.back()" class="btn btn-light btn-sm">
                                <i class="fas fa-arrow-left"></i> ย้อนกลับ
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <strong><i class="fas fa-user me-2"></i>ชื่อผู้ขอเบิก:</strong> <%= order.o_name %>
                                    </div>
                                    <div class="mb-3">
                                        <strong><i class="fas fa-envelope me-2"></i>อีเมล:</strong> 
                                        <a href="mailto:<%= order.o_email %>" class="text-decoration-none"><%= order.o_email %></a>
                                    </div>
                                    <div class="mb-3">
                                        <strong><i class="fas fa-calendar-alt me-2"></i>วันที่ขอเบิก:</strong> <%= new Date(order.timestamp).toLocaleString('th-TH', { dateStyle: 'long', timeStyle: 'short' }) %>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <strong><i class="fas fa-check-circle me-2"></i>สถานะ:</strong> 
                                        <% 
                                        let badgeClass, statusText;
                                        if (order.approve_status === null) {
                                            badgeClass = 'bg-warning';
                                            statusText = 'รอดำเนินการ';
                                        } else if (order.approve_status === 'mgr_approve') {
                                            badgeClass = 'bg-success';
                                            statusText = 'อนุมัติแล้ว';
                                        } else if (order.approve_status === 'mgr_deny') {
                                            badgeClass = 'bg-danger';
                                            statusText = 'ปฏิเสธ';
                                        } 
                                        %>
                                        <span class="badge <%= badgeClass %>"><%= statusText %></span>
                                    </div>
                                    <div class="mb-3">
                                        <strong><i class="fas fa-comment me-2"></i>หมายเหตุเพิ่มเติม:</strong> 
                                        <p class="text-muted "><%= order.reason || '' %></p>
                                    </div>
                                </div>
                            </div>
    
                            <strong><p class="mt-4 mb-3"><i class="fas fa-list me-2"></i>รายการ</p></strong>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>ชื่อสินค้า</th>
                                            <th>ประเภท/สี</th>
                                            <th>จำนวน</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% orderDetails.forEach(item => { %>
                                            <tr>
                                                <td><%= item.i_brand_name %></td>
                                                <td><%= item.type %></td>
                                                <td><%= item.quantity %></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <% if (user && user.u_type === 'manager') { %>
                        <div class="d-flex justify-content-end mt-3">
                          <form action="/approveOrder" method="POST" class="me-2">
                            <input type="hidden" name="orderId" value="<%= order.id_order %>">
                            <button type="submit" class="btn btn-success">อนุมัติคำขอ</button>
                          </form>
                          <form action="/denyOrder" method="POST">
                            <input type="hidden" name="orderId" value="<%= order.id_order %>">
                            <button type="submit" class="btn btn-danger">ปฏิเสธ</button>
                          </form>
                        </div>
                    <% } %>
                </div>
            </div>
        </main>
    </div>
    <br><br>
    <!-- SCRIPT -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="js/sidebar.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"
        crossorigin="anonymous"></script>
    <script src="js/requestTableSort.js"></script>
</body>

</html>
