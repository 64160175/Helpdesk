    <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@300;400;500;600&display=swap" rel="stylesheet">
</head>

<body class="sb-nav-fixed prompt-regular">

    <!-- Navbar TOP -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-blue">
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle"><i
                class="fas fa-bars"></i></button>
        <a class="navbar-brand ps-3" href="index.html">ระบบเบิกอุปกรณ์สำนักงาน</a>

        <!-- Navbar-->
        <div class="ms-auto">
            <ul class="navbar-nav me-3 me-lg-4">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button"
                        data-bs-toggle="dropdown" aria-expanded="false">ADMIN </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#!"><i class="fas fa-sign-out-alt fa-fw"></i> ออกจากระบบ</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <!-- SIDEBAR -->
    <div id="layoutSidenav">

        <!-- SIDEBAR -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-light" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">ระบบอนุมัติ</div>
                        <a class="nav-link" href="/AdminRequestList">
                            <div class="sb-nav-link-icon"><i class="fas fa-file-alt"></i></div>
                            คำร้องขอ
                        </a>

                        <div class="sb-sidenav-menu-heading">ระบบคลังอุปกรณ์</div>
                        <a class="nav-link" href="inventory.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-boxes"></i></div>
                            คลังอุปกรณ์ทั้งหมด
                        </a>
                        <a class="nav-link" href="create-material.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-plus-circle"></i></div>
                            สร้างวัสดุใหม่
                        </a>

                        <div class="sb-sidenav-menu-heading">การจัดการ</div>
                        <a class="nav-link" href="/AdminAllMember">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            ระบบจัดการผู้ใช้งาน
                        </a>
                        <a class="nav-link" href="reports.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-line"></i></div>
                            รายงาน
                        </a>
                    </div>
                </div>
            </nav>
        </div>


        <!-- MAIN CONTENT -->
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">การจัดการบัญชี</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item">ระบบจัดการผู้ใช้งาน</a>
                        <li class="breadcrumb-item active">การจัดการบัญชี</li>
                    </ol>
                    <div class="card mb-4">
                        
                        
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table me-1"></i>
                                รายชื่อสมาชิก
                            </div>
                            <div class="card-body">
                                <table id="membersTable" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>บัญชีผู้ใช้</th>
                                            <th>ชื่อแผนก</th>
                                            <th>บทบาท</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% members.forEach(member => { %>
                                            <tr>
                                                <td><%= member.u_name %></td>
                                                <td><%= member.section || 'ไม่ระบุ' %></td>
                                                <td><%= member.u_type === 'user' ? 'ผู้ขอเบิก' : 'ผู้จัดการ' %></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        
                    
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- SCRIPT -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
