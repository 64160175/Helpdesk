    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-4">คลังอุปกรณ์</h1>
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item"><a href="/UserHome">หน้าหลัก</a></li>
                    <li class="breadcrumb-item active">คลังอุปกรณ์</li>
                </ol>
                
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table" id="itemsTable">
                                <thead>
                                    <tr>
                                        <th width="20%">รูปภาพ</th>
                                        <th class="text-start">ชื่ออุปกรณ์</th>
                                        <th width="20%">คงเหลือ</th>
                                        <th width="20%">จำนวนที่ต้องการ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% printerStocks.forEach(stock => { %>
                                        <tr>
                                            <td class="text-center">
                                                <% if (stock.toner_c_quantity > 0) { %>
                                                    <img src="/img/printer_c.png" alt="ตลับหมึกพิมพ์สีฟ้า <%= stock.p_brand %>" style="width: 100%; height: auto; max-width: auto;">
                                                <% } %>
                                                <% if (stock.toner_m_quantity > 0) { %>
                                                    <img src="/img/printer_m.png" alt="ตลับหมึกพิมพ์สีชมพู <%= stock.p_brand %>" style="width: 100%; height: auto; max-width: auto;">
                                                <% } %>
                                                <% if (stock.toner_y_quantity > 0) { %>
                                                    <img src="/img/printer_y.png" alt="ตลับหมึกพิมพ์สีเหลือง <%= stock.p_brand %>" style="width: 100%; height: auto; max-width: auto;">
                                                <% } %>
                                                <% if (stock.toner_k_quantity > 0) { %>
                                                    <img src="/img/printer_k.png" alt="ตลับหมึกพิมพ์สีดำ <%= stock.p_brand %>" style="width: 100%; height: auto; max-width: auto;">
                                                <% } %>
                                                <% if (stock.waste_toner_quantity > 0) { %>
                                                    <img src="/img/waste_toner.png" alt="Waste Toner <%= stock.p_brand %>" style="width: 100%; height: auto; max-width: auto;">
                                                <% } %>
                                                <% if (stock.drum_quantity > 0) { %>
                                                    <img src="/img/drum_cartridge.png" alt="Drum <%= stock.p_brand %>" style="width: 100%; height: auto; max-width: auto;">
                                                <% } %>
                                            </td>
                                            <td>
                                                <%= stock.p_brand %>
                                                <% if (stock.toner_c_quantity > 0) { %>ตลับหมึกพิมพ์สีฟ้า<br><% } %>
                                                <% if (stock.toner_m_quantity > 0) { %>ตลับหมึกพิมพ์สีชมพู<br><% } %>
                                                <% if (stock.toner_y_quantity > 0) { %>ตลับหมึกพิมพ์สีเหลือง<br><% } %>
                                                <% if (stock.toner_k_quantity > 0) { %>ตลับหมึกพิมพ์สีดำ<br><% } %>
                                                <% if (stock.waste_toner_quantity > 0) { %>Waste Toner<br><% } %>
                                                <% if (stock.drum_quantity > 0) { %>Drum<% } %>
                                            </td>
                                            <td class="text-center">
                                                <% if (stock.toner_c_quantity > 0) { %><%= stock.toner_c_quantity %><br><% } %>
                                                <% if (stock.toner_m_quantity > 0) { %><%= stock.toner_m_quantity %><br><% } %>
                                                <% if (stock.toner_y_quantity > 0) { %><%= stock.toner_y_quantity %><br><% } %>
                                                <% if (stock.toner_k_quantity > 0) { %><%= stock.toner_k_quantity %><br><% } %>
                                                <% if (stock.waste_toner_quantity > 0) { %><%= stock.waste_toner_quantity %><br><% } %>
                                                <% if (stock.drum_quantity > 0) { %><%= stock.drum_quantity %><% } %>
                                            </td>
                                            <td>
                                                <div class="row g-2 justify-content-center">
                                                    <% if (stock.toner_c_quantity > 0) { %>
                                                        <div class="col-md-6">
                                                            <input type="number" class="form-control text-center" id="cyan_<%= stock.id_printer_stock %>" name="cyan_<%= stock.id_printer_stock %>" min="0" max="<%= stock.toner_c_quantity %>" value="0">
                                                        </div>
                                                    <% } %>
                                                    <% if (stock.toner_m_quantity > 0) { %>
                                                        <div class="col-md-6">
                                                            <input type="number" class="form-control text-center" id="magenta_<%= stock.id_printer_stock %>" name="magenta_<%= stock.id_printer_stock %>" min="0" max="<%= stock.toner_m_quantity %>" value="0">
                                                        </div>
                                                    <% } %>
                                                    <% if (stock.toner_y_quantity > 0) { %>
                                                        <div class="col-md-6">
                                                            <input type="number" class="form-control text-center" id="yellow_<%= stock.id_printer_stock %>" name="yellow_<%= stock.id_printer_stock %>" min="0" max="<%= stock.toner_y_quantity %>" value="0">
                                                        </div>
                                                    <% } %>
                                                    <% if (stock.toner_k_quantity > 0) { %>
                                                        <div class="col-md-6">
                                                            <input type="number" class="form-control text-center" id="black_<%= stock.id_printer_stock %>" name="black_<%= stock.id_printer_stock %>" min="0" max="<%= stock.toner_k_quantity %>" value="0">
                                                        </div>
                                                    <% } %>
                                                    <% if (stock.waste_toner_quantity > 0) { %>
                                                        <div class="col-md-6">
                                                            <input type="number" class="form-control text-center" id="waste_<%= stock.id_printer_stock %>" name="waste_<%= stock.id_printer_stock %>" min="0" max="<%= stock.waste_toner_quantity %>" value="0">
                                                        </div>
                                                    <% } %>
                                                    <% if (stock.drum_quantity > 0) { %>
                                                        <div class="col-md-6">
                                                            <input type="number" class="form-control text-center" id="drum_<%= stock.id_printer_stock %>" name="drum_<%= stock.id_printer_stock %>" min="0" max="<%= stock.drum_quantity %>" value="0">
                                                        </div>
                                                    <% } %>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>

                        
                        <div class="text-center mt-3">
                            <button type="button" class="btn btn-success btn-lg " id="btnSave">
                                <i class="fas fa-paper-plane me-1"></i> ส่งคำขอร้องเบิก
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>




    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const inputs = document.querySelectorAll('input[type="number"]');
            inputs.forEach(input => {
                input.addEventListener('input', function() {
                    if (this.value < 0) {
                        this.value = 0;
                    } else if (this.value > parseInt(this.max)) {
                        this.value = this.max;
                    }
                });
            });
    
            document.getElementById('btnSave').addEventListener('click', function() {
                const requestData = [];
                inputs.forEach(input => {
                    if (input.value > 0) {
                        requestData.push({
                            id: input.id,
                            quantity: input.value
                        });
                    }
                });
    
                if (requestData.length === 0) {
                    alert('กรุณาระบุจำนวนที่ต้องการเบิกอย่างน้อย 1 รายการ');
                    return;
                }
    
                // ส่งข้อมูลไปยังเซิร์ฟเวอร์
                fetch('/api/request-items', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(requestData)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('บันทึกคำขอเบิกเรียบร้อยแล้ว');
                        // รีเซ็ตฟอร์มหรือรีโหลดหน้า
                        location.reload();
                    } else {
                        alert('เกิดข้อผิดพลาด: ' + data.message);
                    }
                })
                .catch((error) => {
                    console.error('Error:', error);
                    alert('เกิดข้อผิดพลาดในการส่งคำขอ');
                });
            });
        });
    </script>
